<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Blog</title>
</head>

<body>
    <%- include('./partials/nav') %>

        <div class="container mt-4">
            <h1>
                <%= blog.title %>
            </h1>
            <img src="/<%= blog.coverImageURL %>" width="250vw" />
            <p class="mt-3">
                <%= blog.body %>
            </p>
        </div>

        <div class="container mt-4">
            <img src="<%= blog.createdBy.profileImageURL %>" width="60px" />
            <%= blog.createdBy.fullName %>
        </div>

        <div class="container mt-3">
            <h1>Comments (<%= comments.length %>)</h1>
            <% if (locals.user) { %>
                <form action="/blog/comment/<%= blog._id %>" method="post">
                    <div class="mb-3">
                        <input type="text" class="form-control" name="content" placeholder="Enter your comment..." />
                        <button type="submit" class="btn btn-sm btn-primary mt-2">Add</button>
                    </div>
                </form>
                <% } %>
                <div class="mt-3">
                    <% comments.forEach(comment=> { %>
                        <img src="<%= comment.createdBy.profileImageURL %>" width="25px" />
                        <%= comment.createdBy.fullName %>
                        <p><%= comment.content %></p>
                            <% }) %>
                </div>
        </div>

        <%- include('./partials/scripts') %>
</body>

</html>